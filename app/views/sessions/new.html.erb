<h1>Login</h1>

<%= form_with model: @user, url: session_path do |form| %>

    <div class="mb-3">
        <%= form.label :email %>
        <%= form.text_field :email, class: "form-control", placeholder: "key@buffer.com" %>
    </div>

    <div class="mb-3">
        <%= form.label :password %>
        <%= form.password_field :password, class: "form-control", placeholder: "password" %>
    </div>

    <div class="mb-3">
        <%= form.submit "Log in", class: "btn btn-primary" %>
    </div>
<%end %>

<%= link_to 'Forget your password?', new_password_reset_path, class: 'link' %>